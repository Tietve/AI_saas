# Integration Test Environment Variables
# Copy this to .env.test.local and customize as needed

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/ai_saas_test

# Redis
REDIS_URL=redis://localhost:6380

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
CHAT_SERVICE_URL=http://localhost:3002
BILLING_SERVICE_URL=http://localhost:3003
ORCHESTRATOR_SERVICE_URL=http://localhost:3006

# S3 / MinIO (for document upload tests)
S3_ENDPOINT=http://localhost:9001
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=test-documents
S3_REGION=us-east-1

# Mock External APIs (set to 'true' to use mocks instead of real APIs)
MOCK_OPENAI=true
MOCK_STRIPE=true

# Test Configuration
TEST_TIMEOUT=30000
TEST_PARALLELISM=1
