{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src",
    "<rootDir>/tests"
  ],
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/?(*.)+(spec|test).ts"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setup.ts"
  ],
  "collectCoverageFrom": [
    "src/controllers/**/*.ts",
    "src/services/auth.service.ts",
    "src/middleware/auth.middleware.ts",
    "!src/**/*.d.ts",
    "!src/**/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  }
}