# NPM Configuration
# This file configures npm behavior for the project

# Use legacy peer dependency resolution to handle Storybook version conflicts
# Storybook v9.x vs addon v8.x compatibility issue
legacy-peer-deps=true

# Strict SSL (recommended for security)
strict-ssl=true

# Save exact versions (prevent unexpected updates)
save-exact=false

# Engine strict (enforce Node.js version from package.json)
engine-strict=false
