{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for microservices",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:auth": "jest auth.e2e.test.ts --runInBand",
    "test:chat": "jest chat.e2e.test.ts --runInBand",
    "test:integration": "jest integration.e2e.test.ts --runInBand",
    "test:all": "jest --runInBand --verbose"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "supertest": "^6.3.3"
  }
}
