{
  "name": "my-saas-microservices",
  "version": "2.0.0",
  "description": "SaaS Platform - Microservices Architecture",
  "private": true,
  "workspaces": [
    "services/*",
    "shared",
    "automation"
  ],
  "scripts": {
    "dev:infra": "docker-compose -f docker-compose.microservices.yml up -d",
    "stop:infra": "docker-compose -f docker-compose.microservices.yml down",
    "logs:infra": "docker-compose -f docker-compose.microservices.yml logs -f",
    "ps:infra": "docker-compose -f docker-compose.microservices.yml ps",
    "migrate:auth": "node automation/auto-migrate.js auth-service",
    "migrate:chat": "node automation/auto-migrate.js chat-service",
    "migrate:billing": "node automation/auto-migrate.js billing-service",
    "migrate:notification": "node automation/auto-migrate.js notification-service",
    "migrate:user": "node automation/auto-migrate.js user-service",
    "migrate:all": "node automation/auto-migrate.js --all",
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "lint:all": "npm run lint --workspaces",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:chat": "cd services/chat-service && npm run dev",
    "dev:billing": "cd services/billing-service && npm run dev",
    "dev:notification": "cd services/notification-service && npm run dev",
    "dev:user": "cd services/user-service && npm run dev",
    "clean": "rm -rf services/*/node_modules services/*/dist shared/dist automation/node_modules",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
