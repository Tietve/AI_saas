{
  "name": "ai-saas-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "// Database Commands": "",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx scripts/setup-database.ts",
    "db:reset": "tsx scripts/reset-database.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "// Fix & Maintenance Commands": "",
    "fix:imports": "node scripts/fix-imports.js",
    "fix:all": "npm run fix:imports && npm run type-check",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "// Testing Commands": "",
    "test:auth": "tsx scripts/test-auth.ts",
    "test:db": "tsx scripts/test-database.ts",
    "test:email": "node src/app/api/auth/scripts/test-mail.js",
    "// Development Helpers": "",
    "mailhog": "docker run -d -p 1025:1025 -p 8025:8025 mailhog/mailhog",
    "ngrok": "ngrok http 3000",
    "// Production Commands": "",
    "build:prod": "npm run db:generate && npm run db:migrate:prod && npm run build",
    "start:prod": "npm run build:prod && npm run start"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "^5.19.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@upstash/redis": "^1.34.0",
    "argon2": "^0.40.3",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "highlight.js": "^11.11.1",
    "jose": "^5.9.3",
    "lucide-react": "^0.454.0",
    "next": "14.2.18",
    "nodemailer": "^6.9.16",
    "openai": "^4.67.1",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.0",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "prisma": "^5.19.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
