{
  "name": "ai-saas-backend",
  "version": "1.0.0",
  "description": "AI SaaS Platform - Backend Microservices",
  "private": true,
  "scripts": {
    "// Database Commands": "",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:seed": "tsx scripts/setup-database.ts",
    "db:reset": "tsx scripts/reset-database.ts",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "// Development Commands": "",
    "dev:all": "concurrently -n \"gateway,auth,chat,billing,orchestrator,analytics\" -c \"blue,green,yellow,magenta,cyan,white\" \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:chat\" \"npm run dev:billing\" \"npm run dev:orchestrator\" \"npm run dev:analytics\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:chat": "cd services/chat-service && npm run dev",
    "dev:billing": "cd services/billing-service && npm run dev",
    "dev:orchestrator": "cd services/orchestrator-service && npm run dev",
    "dev:analytics": "cd services/analytics-service && npm run dev",
    "dev:email": "cd services/email-worker && npm run dev",
    "// Infrastructure Commands": "",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:micro": "docker-compose -f docker-compose.microservices.yml up -d",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "// Testing Commands": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:auth": "tsx scripts/test-auth.ts",
    "test:db": "tsx scripts/test-database.ts",
    "test:api": "tsx scripts/test-api-detailed.ts",
    "test:api:azure": "TEST_API_URL=https://firbox-api-ddhtc0hfd2brhaa4.southeastasia-01.azurewebsites.net tsx scripts/test-api-detailed.ts",
    "test:smoke": "tsx scripts/smoke-test.ts",
    "// Environment & Deployment": "",
    "env:verify": "tsx scripts/verify-env.ts",
    "env:verify:strict": "tsx scripts/verify-env.ts --strict",
    "verify:infrastructure": "node verify-infrastructure.js",
    "verify:production": "tsx scripts/post-deploy-verifier.ts",
    "verify:production:verbose": "tsx scripts/post-deploy-verifier.ts --verbose",
    "// Production Commands": "",
    "build:prod": "npm run env:verify && npm run db:generate && npm run db:migrate:prod",
    "deploy:verify": "npm run env:verify:strict",
    "// Memory & Documentation": "",
    "memory:check": "node ../.claude/auto-update.js",
    "memory:update": "node ../.claude/auto-update.js --update",
    "memory:commit": "node ../.claude/auto-update.js --commit",
    "memory:regenerate": "node ../.claude/regenerate-index.js",
    "// Parallel Agents": "",
    "parallel:plan": "node ../.claude/task-distributor.js",
    "parallel:template": "type ../.claude/prompts/safe-parallel-template.txt",
    "// Frontend Testing": "",
    "test:frontend:parallel": "node ../.claude/run-parallel-tests.js",
    "test:frontend:e2e": "cd ../frontend && npx playwright test tests/e2e",
    "test:frontend:visual": "cd ../frontend && npx playwright test tests/visual",
    "test:frontend:integration": "cd ../frontend && npx playwright test tests/integration",
    "test:frontend:layout": "node ../.claude/test-templates/layout-checker.js",
    "test:frontend:all": "npm run test:frontend:parallel",
    "// Monitoring & Operations": "",
    "monitor:health": "tsx scripts/monitor-health.ts",
    "backup:db": "bash scripts/backup-database.sh",
    "backup:setup": "bash scripts/setup-backup-cron.sh",
    "// Development Helpers": "",
    "mailhog": "docker run -d -p 1025:1025 -p 8025:8025 mailhog/mailhog"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@google/generative-ai": "^0.21.0",
    "@payos/node": "^2.0.3",
    "@prisma/client": "^6.17.1",
    "@sentry/node": "^8.0.0",
    "@upstash/redis": "^1.35.6",
    "argon2": "^0.40.3",
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.6.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "file-type": "^21.0.0",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "ioredis": "^5.8.1",
    "jest": "^30.2.0",
    "jose": "^5.9.3",
    "mammoth": "^1.11.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.16",
    "openai": "^4.104.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "strip-comments": "^2.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.4.4",
    "tsyringe": "^4.10.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8",
    "zod-validation-error": "^4.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.17",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "@types/pdf-parse": "^1.1.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "autocannon": "^8.0.0",
    "concurrently": "^9.2.1",
    "prisma": "^6.17.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
