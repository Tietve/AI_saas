{
  "name": "integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for AI SaaS microservices",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand --forceExit",
    "test:auth-chat": "jest auth-chat.integration.test.ts --runInBand --forceExit",
    "test:chat-billing": "jest chat-billing.integration.test.ts --runInBand --forceExit",
    "test:document-pipeline": "jest document-pipeline.integration.test.ts --runInBand --forceExit",
    "test:full-flow": "jest full-flow.integration.test.ts --runInBand --forceExit",
    "test:all": "jest --runInBand --verbose --forceExit",
    "docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f docker-compose.test.yml down -v",
    "docker:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "setup": "npm run docker:up && sleep 5",
    "teardown": "npm run docker:down",
    "test:ci": "npm run setup && npm test && npm run teardown"
  },
  "keywords": [
    "integration",
    "testing",
    "microservices",
    "e2e"
  ],
  "author": "AI SaaS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "redis": "^4.6.12",
    "supertest": "^6.3.3"
  }
}
